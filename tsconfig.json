{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@app/types": [
        "assets/app/types/index.ts"
      ],
      "@app/ui/*": [
        "assets/app/components/*"
      ]
    }
  },
  "include": [
    "assets/**/*.ts",
    "assets/**/*.d.ts",
    "assets/**/*.tsx",
    "assets/**/*.vue"
  ]
}